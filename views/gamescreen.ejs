<div id="game-body" class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100 mainmenuOuterContainer">
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mainmenuInnerContainer" id="chatarea">
            <h2><i class="fab fa-wolf-pack-battalion"></i> 狼人杀</h2>
            <hr>
            <div id="room-info">
                <h3>Room ID: <%= roomID %></h3>
            </div>
            <div id="chatlog">
    
            </div>
            <div class="form-group" id="div-chat-entry">
                <input class="form-control form-control-lg" type="text" id="chat-input" placeholder="Type your message here.">
            </div>
                
            <button id="chat-submit" class="btn btn-info btn-lg btn-block">Send Message</button>
            <div id="player-list">

            </div>
            <input type="hidden" id="roomID" value="<%= roomID %>">
            <input type="hidden" id="player" value="<%= player %>">
        </div>
    </div>
</div>

